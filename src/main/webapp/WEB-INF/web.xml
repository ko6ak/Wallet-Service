<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>org.wallet_service.in.AuthenticationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>org.wallet_service.in.AuthenticationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>PlayerRegister</servlet-name>
        <servlet-class>org.wallet_service.in.RegistrationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PlayerRegister</servlet-name>
        <url-pattern>/player-register</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Balance</servlet-name>
        <servlet-class>org.wallet_service.in.BalanceServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Balance</servlet-name>
        <url-pattern>/balance</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>TransactionLog</servlet-name>
        <servlet-class>org.wallet_service.in.LogServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TransactionLog</servlet-name>
        <url-pattern>/transaction-log</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>FullLog</servlet-name>
        <servlet-class>org.wallet_service.in.LogServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FullLog</servlet-name>
        <url-pattern>/full-log</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>TransactionRegister</servlet-name>
        <servlet-class>org.wallet_service.in.TransactionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TransactionRegister</servlet-name>
        <url-pattern>/transaction-register</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Processing</servlet-name>
        <servlet-class>org.wallet_service.in.TransactionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Processing</servlet-name>
        <url-pattern>/process</url-pattern>
    </servlet-mapping>
</web-app>