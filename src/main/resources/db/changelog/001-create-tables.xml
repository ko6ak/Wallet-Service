<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.10.xsd">

    <changeSet id="001-create-tables" author="ko6ak">
        <sql>CREATE SCHEMA IF NOT EXISTS wallet</sql>
        <sql>DROP TABLE public.databasechangeloglock</sql>

        <createSequence sequenceName="money_account_seq" startValue="1001"/>
        <createSequence sequenceName="player_actions_seq"/>
        <createSequence sequenceName="money_account_actions_seq"/>
        <createSequence sequenceName="player_seq"/>

        <createTable tableName="money_account">
            <column name="id" type="BIGINT" defaultValueComputed="nextval('player_actions_seq')">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="balance" type="NUMERIC">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="money_account_actions">
            <column name="id" type="BIGINT" defaultValueComputed="nextval('money_account_actions_seq')">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="player_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="date_time" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="message" type="VARCHAR">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="player">
            <column name="id" type="BIGINT" defaultValueComputed="nextval('player_actions_seq')">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR">
                <constraints nullable="false"/>
            </column>
            <column name="login" type="VARCHAR">
                <constraints nullable="false"/>
            </column>
            <column name="password" type="VARCHAR">
                <constraints nullable="false"/>
            </column>
            <column name="money_account_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint baseColumnNames="money_account_id"
                                 baseTableName="player"
                                 constraintName="fk_money_account_id"
                                 referencedColumnNames="id"
                                 referencedTableName="money_account"/>
        <addUniqueConstraint tableName="player"
                             columnNames="login"
                             constraintName="unique_login_index" />

        <createTable tableName="player_actions">
            <column name="id" type="BIGINT" defaultValueComputed="nextval('player_actions_seq')">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="player_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="date_time" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="message" type="VARCHAR">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint baseColumnNames="player_id"
                                 baseTableName="player_actions"
                                 constraintName="fk_player_id"
                                 referencedColumnNames="id"
                                 referencedTableName="player"/>

        <createTable tableName="transaction">
            <column name="id" type="VARCHAR">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="date_time" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="VARCHAR">
                <constraints nullable="false"/>
            </column>
            <column name="operation" type="VARCHAR">
                <constraints nullable="false"/>
            </column>
            <column name="amount" type="NUMERIC">
                <constraints nullable="false"/>
            </column>
            <column name="money_account_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="is_processed" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint baseColumnNames="money_account_id"
                                 baseTableName="transaction"
                                 constraintName="fk_transaction_money_account_id"
                                 referencedColumnNames="id"
                                 referencedTableName="money_account"/>

    </changeSet>
</databaseChangeLog>